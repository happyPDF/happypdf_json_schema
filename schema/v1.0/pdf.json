{
  "type": "object",
  "title": "PDF",
  "name": "pdf",
  "description": "A PDF created from a template.",
  "properties": {
    "id": {
      "description": "The object identifier.",
      "identity": true,
      "readonly": true,
      "type": "integer"
    },
    "filename": {
      "description": "Filename",
      "type": "string",
      "maxlength": 128
    },
    "pdt_id": {
      "description": "PDF Template id, used to create this PDF.",
      "type": "integer"
    },
    "public_id": {
      "description": "Unique ID to be used in public URL e.g for public private download links.",
      "readonly": true,
      "type": "string"
    },
    "user_id": {
      "description": "User who created the object",
      "type": "integer"
    },
    "created_at": {
      "description": "Creation date",
      "readonly": true,
      "type": "string",
      "format": "date-time"
    },
    "account_id": {
      "description": "Account this objects belongs to.",
      "type": "integer"
    },
    "pages": {
      "description": "Pages of the pdf, sorted by page number.",
      "type": "array",
      "properties":{"$ref":"./page.json#properties"}
    }
  },
  "links": [
    {
      "rel": "self",
      "href": "api/pdfs/{id}"
    },
    {
      "rel": "instances",
      "method": "GET",
      "href": "api/pdfs"
    },
    {
      "rel": "create",
      "method": "POST",
      "href": "api/pdfs",
      "properties": {
        "pdt_id":{
          "title" : "Template",
          "description": "ID of an PDF template to use.",
          "required": true
        }
      }
    },
    {
      "rel": "destroy",
      "method": "DELETE",
      "href": "api/pdfs/{id}"
    }
  ]
}